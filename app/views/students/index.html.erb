<% @students.each do |student| %>
  <tr>
    <td><%= student.surname %></td>
    <td><%= student.firstname %></td>
    <td><%= student.patrynomic %></td>
    <td><%= student.birthday %></td>
    <td><%= student.code %></td>
    <td><%= link_to 'Show', student %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
