<% title "#{resource.class.model_name.human}. #{t('Adding information')}" %>

<%= semantic_form_for resource, :url => collection_url do |form| %>
  <%= form.error_messages %>
  <%= render :partial => "form", :object => form %>
  <%= form.buttons do %>
    <%= form.commit_button :button_html => { :class => "button" } %>
    <li><%= link_to t(:cancel), collection_url, :class => "button light" %></li>
  <% end %>
<% end %>

