<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.input :email %>
  <% f.inputs :name => "Пароль", :class => "password bordered inputs" do %>
    <%= f.input :current_password %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  <% f.inputs :for => :people do |people_form| %>
  <% people_form.input :surname %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button "Сохранить", :button_html => { :class => "button" } %>
  <% end %>
<% end %>
