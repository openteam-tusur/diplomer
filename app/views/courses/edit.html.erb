<%= semantic_form_for @course, :url => diploma_course_path(@course.diploma, @course), :remote => true, :html => {:'data-type' => 'html'} do |form| %>
  <%= form.error_messages %>
  <%= render :partial => 'courses/form', :locals => {:form => form} %>
  <%= form.buttons do %>
    <%= form.commit_button :button_html => { :class => "button" } %>
    <%= link_to t(:cancel), smart_resource_url,  :class => 'button cancel red', :remote => true, :'data-type' => 'html' %>
  <% end %>
<% end %>
