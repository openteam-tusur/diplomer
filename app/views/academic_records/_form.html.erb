<%= form.fields_for :student do |student| %>
  <%= student.inputs do %>
    <%= student.input :surname, :input_html => {:tabindex => '1'} %>
    <%= student.input :firstname, :input_html => {:tabindex => '2'} %>
    <%= student.input :birthday, :input_html => {:tabindex => '8'} %>
  <% end %>
<% end %>

<%= form.inputs do %>
  <%= form.input :faculty, :wrapper_html => {:class => 'right wide'}, :input_html => {:tabindex => '9'} %>
  <%= form.input :issued_on %>
<% end %>

