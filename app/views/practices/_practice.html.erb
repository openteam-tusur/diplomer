<span class="handle"><span>[drag]</span></span>
<div>
  <span class='title'><%= practice.title %></span>
  <span class='eng_title'><%= practice.eng_title.present? ? practice.eng_title : 'не указано' %></span>
  <span class='credits'><%= practice.credits %></span>
  <span class='hours'><%= practice.weeks %></span>
  <%= content_tag :span, practice.grade? ? practice.human_grade : 'не указано', :class => 'human_grade' if practice.context.is_a?(Diploma) %>
  <span class='actions'>
    <%= link_to t(:destroy), [practice.context, practice], :confirm => t('Are you sure?'), :method => :delete, :remote => true, :class=>'delete_link' %>
    <%= link_to t(:edit), [:edit, practice.context, practice], :class => 'edit_link' %>
  </span>
</div>

