<%= semantic_form_for Practice.new, :url => diploma_practices_path(diploma), :remote => true do |form| %>
  <%= form.error_messages %>
  <%= form.input :diploma_id, :as => :hidden, :value => diploma.id %>
  <%= form.inputs :discipline, :credits, :weeks, :grade %>
  <%= form.buttons do %>
    <%= form.commit_button :button_html => { :class => "button" } %>
    <li><%= link_to t(:cancel), smart_resource_url, :class => "button light" %></li>
  <% end %>
<% end %>
