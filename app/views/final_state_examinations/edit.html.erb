<%= semantic_form_for @final_state_examination,
                      :url => resource_url,
                      :remote => true,
                      :html => {:'data-type' => 'html'} do |form| %>
  <h4>Государственный экзамен</h4>
  <%= form.error_messages %>
  <%= form.inputs do %>
    <%= form.input :title %>
    <%= form.input :eng_title %>
    <%= form.input :grade if form.object.context.is_a?(Diploma) %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button :button_html => { :class => "button" } %>
    <%= link_to t(:cancel), smart_resource_url,  :class => 'button cancel red', :remote => true, :'data-type' => 'html' %>
  <% end %>
<% end %>

